    <h3 class="text-warning text-uppercase font-weight-bold mb-0 pt-md-5 pt-5 animated wobble"><strong> Sightings: </strong></h3>
    <div class="row">
        <div class="col-sm-4 col-sm-offset-4">
<!--            <a href="/sightings"><button type="button" class="btn btn-info">Add Sighting</button></a>-->
            <h3>All Sightings:</h3>
           {{#each model}}
            <h3><a href="/animals/$sighting.getAnimalId()">{{animalName}}</a></h3>
            <p><em>{{sightTime}}</em></p>
            <p>
                Location: {{location}}, Ranger: {{rangerName}}
            </p>
            {{/each}}
        </div>
    </div>
</div>
