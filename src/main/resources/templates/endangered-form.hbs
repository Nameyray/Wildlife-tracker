        <li class="nav-item">
            <a class="nav-link" href="endangered/new">Endangered</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="sightings/new">Sightings</a>
        </li>

    </ul>
</nav>
<div class="col-md-12 mb-4 white-text text-center">
    <h1 class="h1-reponsive text-warning text-uppercase font-weight-bold mb-0 pt-md-5 pt-5 animated wobble"><strong> Add Endangered Animal </strong></h1>
    <div class="row">
        <div class="col-sm-4 col-sm-offset-4">
            <form action="/endangered" method="post">
                <p class="h4 mb-4">Animal Spotted</p>
                <input type="text" id="name" name="name" class="form-control mb-4" placeholder="Animal Name" >
                <input type="text" id="ranger" name="ranger" class="form-control mb-4" placeholder="Ranger's Name">
                <input list="age-list"type="text" id="age" name="age" class="form-control mb-4" placeholder="Age eg:young">
                <datalist id="age-list">
                    <option>NewBorn</option>
                    <option>Young</option>
                    <option>Adult</option>
                </datalist>

                <input list="health-list" type="text"  id="health" name="health" class="form-control mb-4" placeholder="Health">
                <datalist id="health-list">
                    <option>Healthy</option>
                    <option>Okay</option>
                    <option>Ill</option>
                </datalist>

                <div class="d-flex justify-content-around">
                </div>

                <button class="btn btn-info " type="submit">Submit</button>
            </form>
    </div>
</div>

